{
  "extends": "astro/tsconfigs/strict", 
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx", // or "react" for older versions of React
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}